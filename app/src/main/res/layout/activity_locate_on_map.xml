<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tourism.hesham.rentapp.LocateOnMap" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:textColor="@android:color/black"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textSize="21sp"
        android:background="@drawable/edit_text_bg"
        android:id="@+id/search_editTextAd"
        android:hint="@string/search_city"
        android:textColorHint="#565656"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/search_imgAd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/search"
        android:clickable="true"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/recyclerIdAd"
        android:layout_below="@id/search_editTextAd"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        />

</RelativeLayout>



