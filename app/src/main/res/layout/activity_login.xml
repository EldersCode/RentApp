<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tourism.hesham.rentapp.LoginActivity"
    android:background="@drawable/lonesome_in_the_galaxy_978">

    <EditText
        android:id="@+id/Username"
        android:layout_width="304dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Username"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/colorAccent"
        android:layout_above="@+id/Password"
        android:layout_alignStart="@+id/login_button"
        android:layout_marginBottom="12dp" />
    <EditText
        android:id="@+id/Password"
        android:layout_width="304dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Password"
        android:textColorHint="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Username" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="304dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="#7c4b94e1"
        android:gravity="center"
        android:text="Button"
        android:layout_centerHorizontal="true"
        android:textColor="#fcfcfc"
        android:textStyle="bold"
        android:layout_below="@+id/Password"
        android:layout_alignEnd="@+id/login_button" />

    <Button
        android:id="@+id/Register"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="304dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#7ce52561"
        android:gravity="center"
        android:text="Register"
        android:textColor="#fcfcfc"
        android:textStyle="bold"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@mipmap/facebook"
        android:layout_below="@id/Register"
        android:layout_marginTop="27dp"
        android:id="@+id/myfacebook"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@mipmap/googleplus"
        android:layout_below="@id/Register"
        android:layout_marginTop="27dp"
        android:id="@+id/mygoogle"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@mipmap/twitter"
        android:layout_below="@id/Register"
        android:layout_marginTop="27dp"
        android:id="@+id/mytwitter"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
